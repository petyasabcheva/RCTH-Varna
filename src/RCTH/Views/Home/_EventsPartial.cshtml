@{
    this.ViewData["Title"] = "All Blog Articles ";
}

<section class="home-articles-section">
    @if(Model.EventList.Events.Count == 0) { }
    else
    {
        <h2 class="mt-3">Предстоящи събития</h2>
        <ul class="home-articles-list">
            @foreach (var currentEvent in this.Model.EventList.Events)
            {
                <li>
                    <a asp-controller="Home" asp-action="Index" asp-route-id="@currentEvent.Id">
                        <h3>
                            @currentEvent.EventTitle
                        </h3>
                        <p>@currentEvent.Location</p>
                        <p>@currentEvent.Date</p>
                    </a>
                </li>
            }
        </ul>
    }
</section>